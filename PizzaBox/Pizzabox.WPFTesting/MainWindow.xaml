<Window x:Class="Pizzabox.WPFTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzabox.WPFTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="lstCombo" HorizontalAlignment="Left" Margin="70,259,0,0" VerticalAlignment="Top" Width="550" Height="35" Loaded="lstCombo_Loaded"/>
        <Button x:Name="btnCheck" Content="Button" HorizontalAlignment="Left" Margin="70,374,0,0" VerticalAlignment="Top" Width="130" Height="40" Click="btnCheck_Click"/>
        <ComboBox x:Name="lstCrust" HorizontalAlignment="Left" Margin="70,314,0,0" VerticalAlignment="Top" Width="550" Height="35" SelectionChanged="lstCrust_SelectionChanged"/>
        <TextBox x:Name="txtLocation" HorizontalAlignment="Left" Margin="70,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="38"/>

    </Grid>
</Window>
