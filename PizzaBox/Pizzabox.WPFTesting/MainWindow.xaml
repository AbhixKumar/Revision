<Window x:Class="Pizzabox.WPFTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzabox.WPFTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="lstCombo" HorizontalAlignment="Left" Margin="70,259,0,0" VerticalAlignment="Top" Width="625" Height="35" Loaded="lstCombo_Loaded"/>
        <Button x:Name="btnCheck" Content="Button" HorizontalAlignment="Left" Margin="70,374,0,0" VerticalAlignment="Top" Width="95" Height="40" Click="btnCheck_Click"/>
        <ComboBox x:Name="lstCrust" HorizontalAlignment="Left" Margin="70,314,0,0" VerticalAlignment="Top" Width="625" Height="35" SelectionChanged="lstCrust_SelectionChanged"/>
        <RadioButton x:Name="rdoLocationOne" Content="Location 1" HorizontalAlignment="Left" Margin="70,107,0,301" RenderTransformOrigin="0.224,-1.134" Width="130" Checked="rdoLocationOne_Checked"/>
        <RadioButton x:Name="rdoLocationtwo" Content="Location 2" HorizontalAlignment="Left" Margin="305,94,0,0" VerticalAlignment="Top" Height="26" RenderTransformOrigin="0.495,0.193" Width="130"/>

    </Grid>
</Window>
